---
import Layout from "../layouts/Layout.astro";

const products = await fetch("https://api-product-morty.vercel.app/products").then((data) =>
  data.json()
);

console.log(products);
---

<Layout title="Astro Product page">
  <main>
      {
        products.map((product) => (
          <ul>
            <li>Name: {product.name}</li>
            <li>Category: {product.category}</li>
            <li>Precio: {product.price}</li>
            <li class="img" ><img class="img" loading="lazy" src={product.img} width="200px" height="100px"/></li>
          </ul>
        ))
      }
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .img {
    width: 200px;
    height: 250px;
  }
</style>
