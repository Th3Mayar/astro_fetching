---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "@fortawesome/fontawesome-free/css/all.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <ul class="menu">
      <li>
        <a href="#"
          ><i class="fa-solid fa-house" style="color: #ffffff;"></i>Home</a>
      </li>
      <li>
        <a href="#"
          ><i class="fa-brands fa-product-hunt" style="color: #ffffff;"
          ></i>Products</a>
      </li>
      <li>
        <a href="#"
          ><i class="fa-brands fa-uncharted" style="color: #ffffff;"
          ></i>Characters</a>
      </li>
    </ul>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .menu {
    list-style: none;
    padding: 20px;
    margin: 0;
    display: flex;
    background-color: rgb(43, 6, 43);
    display: flex;
    gap: 10px;
    border-bottom: #ffffff 1px solid;
  }

  .menu li {
    margin-right: 10px;
  }

  .menu li:last-child {
    margin-right: 0;
  }

  .menu li a {
    display: block;
    padding: 10px 15px;
    text-decoration: none;
    color: #ffffff;
    border: 1px solid #ffffff;
    border-radius: 20px;
    transition: all 0.3s ease;
  }

  .menu li a:hover {
    background-color: #926192;
    color: #fff;
  }
  i{
    margin-right: 6px;
  }
</style>
